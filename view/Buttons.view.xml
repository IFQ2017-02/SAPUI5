<mvc:View
   controllerName="sap.ui.demo.walkthrough.controller.Buttons"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
   <Panel
      headerText="{i18n>buttonsTitle}"
      class="sapUiResponsiveMargin"
      width="auto" >
      <content >
         <Button
            text="Show"
            press=".onShowShow"/>
         <Button
            text="Alert"
            press=".onShowAlert"/>
         <Button
            text="Information"
            press=".onShowInformation"/>
         <Button
            text="Warning"
            press=".onShowWarning"/>
         <Button
            text="Error"
            press=".onShowError"/>
         <Button
            text="Confirm"
            press=".onShowConfirm"/>
         <Button
            text="Success"
            press=".onShowSuccess"/>
      </content>
   </Panel>
</mvc:View>