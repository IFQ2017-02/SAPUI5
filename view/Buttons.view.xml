<mvc:View
   controllerName="sap.ui.demo.walkthrough.controller.Buttons"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
   <Panel
      headerText="{i18n>buttonsTitle}"
      class="sapUiResponsiveMargin"
      width="auto" >
      <content >
         <Button
            text="Show"
            press=".onShowShow"
            class="sapUiSmallMarginEnd"/>
         <Button
            text="Alert"
            press=".onShowAlert"
            class="sapUiSmallMarginEnd"/>
         <Button
            text="Information"
            press=".onShowInformation"
            class="sapUiSmallMarginEnd"/>
         <Button
            text="Warning"
            press=".onShowWarning"
            class="sapUiSmallMarginEnd"/>
         <Button
            text="Error"
            press=".onShowError"
            class="sapUiSmallMarginEnd"/>
         <Button
            text="Confirm"
            press=".onShowConfirm"
            class="sapUiSmallMarginEnd"/>
         <Button
            text="Success"
            press=".onShowSuccess"
            class="sapUiSmallMarginEnd"/>
      </content>
   </Panel>
</mvc:View>