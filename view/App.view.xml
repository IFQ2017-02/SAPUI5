<?xml version="1.0" encoding="utf-8"?>
<mvc:View
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns:core="sap.ui.core"
   controllerName="hts.ifq2017-02.walkthrough.controller.App">
   <Text text="Hello World aus der XML-View"/>
   <core:HTML content="&lt;br&gt;&lt;br&gt;"/>
   <Link text="Auf zu Google!" href="https://google.com/"/>
   <VBox>
      <Text text="Hello World nochmal in VBox"/>
      <Link text="Auf zu Google!" href="https://google.com/"/>
   </VBox>
   <core:HTML content="&lt;br&gt;&lt;br&gt;"/>
   <VBox>
      <Button text="Standard-Meldung" press=".onStandardAlert"/>
      <Button text="MessageToast" press=".onMessageToast"/>
      <Button text="MessageBox" press=".onMessageBox"/>
      <Button text="Information-Meldung" press=".onInformation"/>
      <Button text="Alert-Meldung" press=".onAlert"/>
      <Button text="Warning-Meldung" press=".onWarning"/>
      <Button text="Error-Meldung" press=".onError"/>
      <Button text="Confirm-Meldung" press=".onConfirm"/>
      <Button text="Success-Meldung" press=".onSuccess"/>
   </VBox>
   <Button text="{i18n>showHelloButtonText}" press=".onShowHello">
   <Input
      value="{/recipient/name}"
      description="Hello {/recipient/name}"
      valueLiveUpdate="true"
      width="60%"/>
</mvc:View>